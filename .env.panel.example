# Pterodactyl Panel Environment Variables
# Copy to /var/www/pterodactyl/.env (or your panel location)

APP_ENV=production
APP_DEBUG=false
APP_URL=https://panel.givrwrldservers.com

# ============ MySQL Database ============
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=panel
DB_USERNAME=panel_rw
DB_PASSWORD=REPLACE_ME_PANEL_STRONG_PASSWORD

# ============ Cache ============
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============ Mail ============
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@panel.givrwrldservers.com
MAIL_FROM_NAME="${APP_NAME}"

# ============ Security ============
APP_KEY=base64:REPLACE_WITH_LARAVEL_APP_KEY
APP_TIMEZONE=UTC
APP_LOCALE=en

# ============ Pterodactyl Settings ============
# Run: php artisan p:environment:setup
# This will generate additional required keys
