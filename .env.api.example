# GIVRwrld API Environment Variables
# Copy to .env.api and fill in actual values

# ============ MySQL Database ============
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=app_core
DB_USER=app_rw
DB_PASS=REPLACE_ME_APP_STRONG_PASSWORD

# ============ AES Encryption Key ============
# Used to decrypt secrets stored in app_core.secrets table
# Generate: openssl rand -hex 32
AES_KEY=REPLACE_WITH_STRONG_256BIT_KEY

# ============ Stripe Configuration ============
# Secrets are stored encrypted in app_core.secrets table
# These are fallbacks if not using encrypted storage:
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXX

# ============ Pterodactyl Configuration ============
# Secrets are stored encrypted in app_core.secrets table
# These are fallbacks if not using encrypted storage:
PANEL_URL=https://panel.givrwrldservers.com
PANEL_APP_KEY=ptla_app_XXXXXXXXXXXXXXXX

# ============ Application Configuration ============
APP_NAME=GIVRWRLD Servers
APP_URL=https://givrwrldservers.com
APP_ENV=production
APP_DEBUG=false

# ============ CORS ============
ALLOW_ORIGINS=https://givrwrldservers.com,https://www.givrwrldservers.com

# ============ Logging ============
LOG_LEVEL=info
LOG_CHANNEL=file

# ============ Session ============
SESSION_DRIVER=mysql
SESSION_LIFETIME=120

# ============ Queue (if using) ============
QUEUE_CONNECTION=database
