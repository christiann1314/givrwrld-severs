# GIVRwrld Worker Environment Variables
# Copy to .env.worker and fill in actual values

# ============ MySQL Database ============
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=app_core
DB_USER=provisioning_rw
DB_PASS=REPLACE_ME_PROV_STRONG_PASSWORD

# ============ AES Encryption Key ============
# Used to decrypt secrets stored in app_core.secrets table
# Must match AES_KEY in .env.api
AES_KEY=REPLACE_WITH_STRONG_256BIT_KEY

# ============ Provisioning Configuration ============
PROV_DB_HOST=127.0.0.1
PROV_DB_PORT=3306
PROV_DB_USER=provisioning_rw
PROV_DB_PASS=REPLACE_ME_PROV_STRONG_PASSWORD

# ============ Stripe Configuration ============
# Secrets are stored encrypted in app_core.secrets table
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXX

# ============ Pterodactyl Configuration ============
# Secrets are stored encrypted in app_core.secrets table
PANEL_URL=https://panel.givrwrldservers.com
PANEL_APP_KEY=ptla_app_XXXXXXXXXXXXXXXX

# ============ Worker Configuration ============
WORKER_CONCURRENCY=5
PROVISION_TIMEOUT_SEC=900
DEFAULT_REGION=us-central

# ============ Queue ============
QUEUE_CONNECTION=database
QUEUE_NAME=provisioning

# ============ Logging ============
LOG_LEVEL=info
LOG_CHANNEL=file
